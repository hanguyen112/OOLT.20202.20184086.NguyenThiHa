import java.util.Scanner;
public class Triangle {
	public static void main(String[]args) {
		Scanner sc = new Scanner(System.in);
		int n;
		do{
		System.out.println("Enter the  triangle's size (number of line(s)):");
	    n = sc.nextInt();
		}
		while(n <= 0);
		for(int i=1; i<=n; i++) {
			for(int j=0; j<= i;j++) {
				//for(space = n; (space >= 1 && space <=n); space--)
					System.out.println("");
			}
		 for(int k = 0; k<i; k++) {	
				    System.out.println("*");
				    }
		            System.out.println("");
		}
			
		
	}

}